{
    "name": "openshelter",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbo",
        "build": "npm run db:migrate && next build",
        "start": "next start",
        "lint": "next lint",
        "type-check": "tsc --noEmit",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "npx tsx lib/db/migrate.ts",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio",
        "db:seed": "tsx lib/db/seed.ts",
        "setup:check-env": "node scripts/setup-vercel-env.js",
        "dev:setup": "node scripts/setup-dev.js",
        "dev:db": "docker-compose -f docker-compose.dev.yml up -d",
        "dev:db:down": "docker-compose -f docker-compose.dev.yml down",
        "dev:db:logs": "docker-compose -f docker-compose.dev.yml logs -f postgres",
        "dev:up": "npm run dev:setup && npm run dev:db && node scripts/wait-db.js && npm run db:push && npm run dev",
        "dev:reset": "npm run dev:db:down && docker volume rm openshelter_postgres_dev_data 2>/dev/null || true && npm run dev:up"
    },
    "dependencies": {
        "@auth/drizzle-adapter": "^1.7.0",
        "@hookform/resolvers": "^5.2.2",
        "@neondatabase/serverless": "^1.0.2",
        "@paralleldrive/cuid2": "^2.2.2",
        "@radix-ui/react-avatar": "^1.1.11",
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-dropdown-menu": "^2.1.16",
        "@radix-ui/react-label": "^2.1.8",
        "@radix-ui/react-select": "^2.2.6",
        "@radix-ui/react-separator": "^1.1.8",
        "@radix-ui/react-slot": "^1.2.4",
        "@radix-ui/react-toast": "^1.2.15",
        "@radix-ui/react-tooltip": "^1.2.8",
        "@types/bcryptjs": "^2.4.6",
        "@vercel/blob": "^2.0.1",
        "bcryptjs": "^2.4.3",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "dotenv": "^16.4.5",
        "drizzle-orm": "^0.34.0",
        "lucide-react": "^0.563.0",
        "next": "^16.1.6",
        "next-auth": "^5.0.0-beta.30",
        "next-themes": "^0.4.6",
        "postgres": "^3.4.4",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-hook-form": "^7.71.1",
        "server-only": "^0.0.1",
        "sonner": "^2.0.7",
        "tailwind-merge": "^3.4.0",
        "tailwindcss-animate": "^1.0.7",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@types/node": "^22.8.6",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "autoprefixer": "^10.4.20",
        "drizzle-kit": "^0.25.0",
        "eslint": "^9.0.0",
        "eslint-config-next": "^16.1.6",
        "postcss": "^8",
        "prettier": "^3.4.0",
        "tailwindcss": "^3.4.17",
        "tsx": "^4.19.1",
        "typescript": "^5.6.3"
    }
}
