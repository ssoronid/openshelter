{
    "name": "openshelter",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbo",
        "build": "npx drizzle-kit push && next build",
        "start": "next start",
        "lint": "next lint",
        "type-check": "tsc --noEmit",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "npx tsx lib/db/migrate.ts",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio",
        "db:seed": "tsx lib/db/seed.ts",
        "setup:check-env": "node scripts/setup-vercel-env.js",
        "dev:setup": "node scripts/setup-dev.js",
        "dev:db": "docker-compose -f docker-compose.dev.yml up -d",
        "dev:db:down": "docker-compose -f docker-compose.dev.yml down",
        "dev:db:logs": "docker-compose -f docker-compose.dev.yml logs -f postgres",
        "dev:up": "npm run dev:setup && npm run dev:db && node scripts/wait-db.js && npm run db:push && npm run dev",
        "dev:reset": "npm run dev:db:down && docker volume rm openshelter_postgres_dev_data 2>/dev/null || true && npm run dev:up"
    },
    "dependencies": {
        "@auth/drizzle-adapter": "^1.7.0",
        "@paralleldrive/cuid2": "^2.2.2",
        "@types/bcryptjs": "^2.4.6",
        "@vercel/blob": "^2.0.1",
        "bcryptjs": "^2.4.3",
        "dotenv": "^16.4.5",
        "drizzle-orm": "^0.34.0",
        "next": "^16.1.6",
        "next-auth": "^5.0.0-beta.30",
        "postgres": "^3.4.4",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@types/node": "^22.8.6",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "autoprefixer": "^10.4.20",
        "drizzle-kit": "^0.25.0",
        "eslint": "^9.0.0",
        "eslint-config-next": "^16.1.6",
        "postcss": "^8",
        "prettier": "^3.4.0",
        "tailwindcss": "^3.4.17",
        "tsx": "^4.19.1",
        "typescript": "^5.6.3"
    }
}
